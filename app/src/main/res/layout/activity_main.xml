<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_material_light"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/graphfragmentcontainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gengraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="gengraph"
            android:background="@drawable/button_status"
        />
        <Button
            android:id="@+id/movenode"
            android:layout_width="0dp"
            android:text="movenode"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_status"
            />
        <Button
            android:id="@+id/linknode"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="linknode"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_status"
            />

    </LinearLayout>

</LinearLayout>
